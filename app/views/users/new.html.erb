<%= form_for(@user) do |f| %>
  <%= f.text_field :username, :placeholder => "Username", :autofocus => 'true', :autocomplete => 'off', :required => 'true' %>
  <%= f.password_field :password, :placeholder => "Password", :required => 'true' %>
  <%= f.password_field :password_confirmation, :placeholder => "Password, again", :required => 'true' %>
  <br>
  <%= f.submit "Create an account", :class => "btn" %>
<% end %>